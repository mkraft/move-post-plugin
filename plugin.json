{
    "id": "com.mattermost.move-post-plugin",
    "name": "Move Post",
    "version": "",
    "webapp": {
        "bundle_path": "main.js"
    },
    "settings_schema": {
        "settings": [
            {
                "key": "move_behaviour",
                "display_name": "Original Post Behaviour",
                "type": "dropdown",
                "help_text": "The post that was moved can either be delete or automatically edited to replace the post message with a string using the configured replacement template.",
                "default": "",
                "options": [
                    {
                        "display_name": "Delete it",
                        "value": "delete"
                    },
                    {
                        "display_name": "Replace it with a string using the template",
                        "value": "template"
                    }
                ]
            },
            {
                "key": "edit_template",
                "display_name": "Replacement Template",
                "type": "text",
                "help_text": "The template to be used when editing the original post (instead of deleting it). Markdown is accepted and the template variables `{{Permalink}}` and `{{MoverUsername}}` are interpolated.",
                "placeholder": "[moved to thread]({{Permalink}}) by {{MoverUsername}}",
                "default": "[moved to thread]({{Permalink}}) by {{MoverUsername}}"
            }
        ]
    }
}